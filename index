    <script>
        // Classic 90s JavaScript effects
        let colors = ['#ff0000', '#00ff00', '#0000ff', '#ffff00', '#ff00ff', '#00ffff'];
        let colorIndex = 0;

        // Change title color every second
        setInterval(function() {
            document.title = '★ Welcome to CyberSpace Central ★ - ' + new Date().toLocaleTimeString();
        }, 1000);

        // Add some interactive sparkles
        document.addEventListener('click', function(e) {
            let sparkle = document.createElement('div');
            sparkle.innerHTML = '✨';
            sparkle.style.position = 'absolute';
            sparkle.style.left = e.pageX + 'px';
            sparkle.style.top = e.pageY + 'px';
            sparkle.style.pointerEvents = 'none';
            sparkle.style.fontSize = '20px';
            sparkle.style.animation = 'sparkle 1s ease-out forwards';
            document.body.appendChild(sparkle);
            
            setTimeout(() => {
                sparkle.remove();
            }, 1000);
        });

        // Simulate visitor counter incrementing
        let counter = 1337;
        setInterval(() => {
            counter++;
            let counterEl = document.querySelector('.hit-counter');
            if (counterEl) {
                counterEl.textContent = counter.toString().padStart(6, '0');
            }
        }, 30000); // Increment every 30 seconds
    </script>
